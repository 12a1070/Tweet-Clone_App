<div class="form">
  <%= form_with(model: post, local: true,url:choose_new_or_edit) do |form| %>
    <% if post.errors.any? %>
      <h2><%= pluralize(post.errors.count, "箇所エラーを発見しました") %>　prohibited this post from being saved:</h2>
      <ul>
      <% post.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    <% end %>
  <div class=field">
    <%= form.text_area :content, size: "60x10"%>
  </div>
  <div class="actions">
    <%= form.submit %>
  </div>
  <% end %>
</div>
